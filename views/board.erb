<div class="container">
  <div class="section">
    <% if board[:userid]==userid %>
      <a class="button" href="/boards/<%= board[:id] %>/edit">‚úèÔ∏è Edit</a>
      <a class="button is-link is-light" href="/boards/<%= board[:id] %>/reset" title="This will clear votes and ask users to vote again">‚úã Request New Votes</a>
    <% end %>
    <a class="button is-success is-light" href="/boards/<%= board[:id] %>/vote">üó≥Ô∏è Vote</a>
  </div>

  <div class="section">

    <% if board[:votes].empty?  %>
      <div class="notification">
        No votes yet. Waiting for the team to vote...
      </div>
    <% else %>
      <h1 class="title">
        üó≥Ô∏è <%= board[:votes].count %> Votes
        | <% board[:votes].values.group_by(&:to_i).each { |k,v| %> <%= k %> <sub>√ó<%= v.count %></sub> <% } %>
      </h1>
    <% end %>

    <div class="columns is-multiline is-centered">
      <% board[:votes].each do |userid, vote| %>
        <div class="column is-one-quarter">
          <div class="card">
            <div class="card-content has-text-centered">
              <div class="title" style="font-size: 9em;">
                <%=h vote %>
              </div>
              <div class="subtitle">
                <%=h userid %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>

<iframe frameborder="0" src="/boards/<%= board[:id] %>/check/<%= board[:updated_at] %>" style="width:0;height:0;display:absolute;"></iframe>
